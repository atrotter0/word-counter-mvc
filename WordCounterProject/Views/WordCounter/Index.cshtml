@{
    Layout = "_Layout";
}

<div class='container'>
    <div class='jumbotron'>
        <p>Enter a word and a phrase in the fields below. Click 'Count Words' to count how many times that word appears in the given phrase.</p>
        <form id='word-count'>
            <div class='error-display'></div>
            <div class='form-group'>
                <label for='word'><h3>Enter a word:</h3></label>
                <input type='text' name='word' id='word-input' class='form-control'>
            </div>
            <div class='form-group'>
                <label for='phrase'><h3>Enter a phrase:</h3></label>
                <input type='text' name='phrase' id='phrase-input' class='form-control'>
            </div>
            <button type='submit' id='count-word' class='btn btn-default btn-lg'>Count Words</button>
            <div id='loading-gif'>
                <img src='img/loading.gif' alt='Loading results icon'>
            </div>
        </form>
    </div>
</div>